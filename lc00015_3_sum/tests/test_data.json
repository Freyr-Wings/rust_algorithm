[
  {
    "test_name": "Sample",
    "nums": [-1,0,1,2,-1,-4],
    "expected": [[-1,-1,2],[-1,0,1]]
  },
  {
    "test_name": "All Negative Numbers",
    "nums": [-5,-4,-3,-2,-1],
    "expected": []
  },
  {
    "test_name": "All Positive Numbers",
    "nums": [1,2,3,4,5],
    "expected": []
  },
  {
    "test_name": "Contains Zero",
    "nums": [-1,0,1],
    "expected": [[-1,0,1]]
  },
  {
    "test_name": "Multiple Zeroes",
    "nums": [-1,0,0,1,2,-1,-4],
    "expected": [[-1,-1,2],[-1,0,1]]
  },
  {
    "test_name": "All Zeroes",
    "nums": [0,0,0,0,0],
    "expected": [[0,0,0]]
  },
  {
    "test_name": "Only Three Elements - Valid Triplet",
    "nums": [-2,0,2],
    "expected": [[-2,0,2]]
  },
  {
    "test_name": "Only Three Elements - No Triplet",
    "nums": [1,2,3],
    "expected": []
  },
  {
    "test_name": "Large List with Duplicates",
    "nums": [-2,-2,-2,0,0,0,2,2,2],
    "expected": [[0,0,0],[-2,0,2]]
  },
  {
    "test_name": "Unsorted Input",
    "nums": [3,-1,-4,0,2,-2,1],
    "expected": [[-4,1,3],[-2,-1,3],[-2,0,2],[-1,0,1]]
  },
  {
    "test_name": "Already Sorted Input",
    "nums": [-4,-1,-1,0,1,2,2,3],
    "expected": [[-1,-1,2],[-4,2,2],[-4,1,3],[-1,0,1]]
  },
  {
    "test_name": "Single Element",
    "nums": [0],
    "expected": []
  },
  {
    "test_name": "Two Elements",
    "nums": [1,-1],
    "expected": []
  },
  {
    "test_name": "Large Negative and Positive Numbers",
    "nums": [-1000,-500,0,500,1000],
    "expected": [[-1000,0,1000],[-500,0,500]]
  },
  {
    "test_name": "Triplets with Large Range",
    "nums": [-1000000,1000000,0,-500000,500000],
    "expected": [[-1000000,0,1000000],[-500000,0,500000]]
  }
]
